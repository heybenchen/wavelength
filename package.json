{
  "name": "wavelength",
  "author": "Ben Chen",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^5.2.0",
    "express": "^4.17.1",
    "install": "^0.13.0",
    "npm": "^6.14.5",
    "path": "^0.12.7",
    "socketio": "^1.0.0",
    "ts-node-dev": "^1.0.0-pre.50",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "server": "ts-node-dev --respawn --transpileOnly server.ts",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "start": "tsc && node server.js",
    "build": "cd client && yarn install && yarn build",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/socket.io": "^2.1.8",
    "@types/node": "^14.0.19"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  }
}